<header>

</header>

<div id="login_body">
  <div class="top-buffer">
  </div>

  <div class="row">
    <div class="col-md-4 col-sm-4 col-lg-4">
    </div>
    <div class="col-md-4 col-sm-4 col-lg-4 form-block">
      <header class="form-header">
        <h1><strong>Sign In</strong></h1>
      </header>
      <div class="form-top-buffer"></div>
      <%= simple_form_for @current_user, html: {class: "hero-form"}, url: sessions_path do |f| %>
        <%= f.input :email, placeholder: "Email Address", label: false, required: true%>
        <%= f.input :password, placeholder: "Password", label: false, required: true%>
        <%= f.button :submit, class: "btn-form-submit", value: "Sign In" %>
      <% end %>
      <div class="line-breaker">
        <h2></h2>
      </div>
      <div class="social-button">
        <a class="btn-block btn-social btn-lg btn-facebook" href="/auth/facebook">
          <i class="fa fa-facebook"></i>
          <span>Sign in with Facebook</span>
        </a>
      </div>
    </div>
    <div class="col-md-4 col-sm-4 col-lg-4">
    </div>
</div>
</div>
