<div class="navbar-buffer">

</div>
<% if current_user && current_user.errors.present? %>
  <ul>
    <% @errors = current_user.errors %>
    <%= render "shared/partials/errors_msg_loop" %>
  </ul>
<% end %>
<div class="row">
  <div class="col-lg-4 col-md-4 col-sm-4">
  </div>
  <div class="col-lg-4 col-md-4 col-sm-4">

    <%= simple_form_for current_user, html: {class: "hero-form", multipart: true}, url: user_path, method: :patch do |f| %>
    <%= f.input :avatar %>
    <%= f.input :first_name, required: false  %>
    <%= f.input :last_name, required: false %>
    <%= f.input :user_name, required: false %>
    <%= f.input :email, required: false %>
    <%= f.input :password, required: false%>
    <%= f.input :password_confirmation, required: false %>
    <%= f.button :submit, value: "Update" %>

    <% end %>
  </div>
  <div class="col-lg-4 col-md-4 col-sm-4">
  </div>
</div>
