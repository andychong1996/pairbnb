
<div class="registration_body">

  <h1>Sign up</h1>

  <% if @current_user && @current_user.errors.present? %>
    <ul>
      <% @errors = @current_user.errors %>
      <%= render "shared/partials/errors_msg_loop" %>
    </ul>
  <% end %>

  <%= simple_form_for @current_user, html: {class: "hero-form"}, url: sign_up_path do |f| %>
    <%= f.input :first_name , required: true%>
    <%= f.input :last_name %>
    <%= f.input :user_name %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.button :submit, value: "Sign Up" %>
  <% end %>

</div>
